- title t('my.airports.title')

= form_tag select_options_path do
  %p
    = label_tag :aircraft, 'Select an aircraft'
    = select_tag :aircraft, options_for_select(Aircraft.all.map { |i| [ i.name, i.id ] }, params[:aircraft]), :include_blank => 'Choose'
  %p
    = label_tag :country, 'Select a country'
    = select_tag :country, options_for_select(Country.all.map { |i| [ i.name, i.id ] }, params[:country]), :include_blank => 'Choose'
  %p= submit_tag 'Select'


- if @first_waypoint.present?
  %p= "Aircraft #{ @aircraft.name }"

  %table
    %thead
      %tr
        %th.code Code
        %th.name Name
        %th.country Country
        %th.latitude Latitude
        %th.longitude Longitude
        %th.distance Distance
        %th.total Total
    %tbody
      = print_waypoint @first_waypoint

  #map_canvas