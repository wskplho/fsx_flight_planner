!!! 5
%html{ :lang => 'cs' }
  %head
    %meta{ :charset => 'utf-8' }
    %title= raw "#{ yield(:title) } &ndash; #{ t('my.title') }"
    = stylesheet_link_tag 'basic', 'layout', 'jquery-ui-1.8.15.custom'
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = yield(:head)
  %body{ :class => @class }
    = content_tag :h1, yield(:title) if show_title?
    - flash.each do |name, msg|
      %p{ :class => "flash #{ name }" }
        %strong= raw msg
    = yield