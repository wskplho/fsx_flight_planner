= render 'form', :flight => @flight

- if @flight.first_waypoint.present?
  .wrapper
    .plan
      %table
        %thead
          %tr
            %th.number= t('activerecord.attributes.waypoint.number')
            %th.code= t('activerecord.attributes.waypoint.code')
            %th.name= t('activerecord.attributes.waypoint.name')
            %th.country= t('activerecord.attributes.waypoint.country')
            %th.latitude= t('activerecord.attributes.waypoint.latitude')
            %th.longitude= t('activerecord.attributes.waypoint.longitude')
            %th.distance= t('activerecord.attributes.waypoint.distance')
            %th.total= t('activerecord.attributes.waypoint.total')
        %tbody
          = print_waypoint @flight.first_waypoint

    #map_canvas
    .clear