= form_for flight do |f|
  %p
    = f.autocomplete_field :start_code, flights_autocomplete_airport_name_with_code_path, :size => 4, :update_elements => { :code => '#flight_start_code' }, :placeholder => Flight.human_attribute_name(:start_code)
    &rarr;
    = f.autocomplete_field :finish_code, flights_autocomplete_airport_name_with_code_path, :size => 4, :update_elements => { :code => '#flight_finish_code' }, :placeholder => Flight.human_attribute_name(:finish_code)
    = f.autocomplete_field :country_name, flights_autocomplete_country_name_path, :size => 20, :placeholder => Flight.human_attribute_name(:country_name)
    = f.collection_select :aircraft_id, Aircraft.all, :id, :name, :include_blank => Flight.human_attribute_name(:aircraft_name)
    = f.submit t('my.submit')
    = link_to t('my.reset'), '#', :class => 'reset'